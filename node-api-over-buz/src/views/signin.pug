extends layout

block styles
  link(rel="stylesheet", href="/assets/css/signin.css")

block content
  .signin
    .container
      form(
        class="form-signin"
        method="POST"
        action= action
      )
        h2.form-signin-heading Please sign in

        if errors
          #errors-alert(
            class="alert alert-danger fade show"
            role="alert"
          )
            each error in errors
              p= error

        label.sr-only(for="inputUsername") Username
        input(
          id="inputUsername"
          class="form-control"
          type="text"
          placeholder="Username"
          name="username"
          value="#{username || ''}"
          required
          autofocus
        )

        label.sr-only(for="inputPassword") Password
        input(
          id="inputPassword"
          class="form-control"
          type="password"
          name="password"
          value="#{password || ''}"
          placeholder="Password"
          required
        )

        input(
          id="inputToken"
          type="hidden"
          name="_token"
          value= csrfToken
        )

        button(
          class="btn btn-lg btn-primary btn-block"
          type="submit"
        ) Sign in

block scripts
  script(src="/assets/js/signin.js")